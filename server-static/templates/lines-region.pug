extends layout.pug

block content
  div(class="default-container")
    header(class="material-header")
      a(href="/l" class="header-left")
        svg(width="24" height="24" fill="#273D52" viewBox="0 0 24 24" aria-label="Home")
          path(d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z")
      div(class="header-expand")
        h1 All Lines

    div(class="list-lines enable-scrolling")
      div(class="scrollwrap")
        each group in data.groups
          h2= group.name
          ul(class="inner-lines show")
            each line in group.items
              - let color = 'background-color:'+data.colors[line]
              li
                a(class="line-item" href=('/l/' + region + '/' + line))
                  span(class="line-pill-wrapper")
                    span(class="line-pill" style=color)= data.friendlyNumbers[line] || line
                  span(class="line-label")= data.friendlyNames[line] || data.lines[line][0].slice(0,2).join(' to ')