extends layout.pug

block content
  div(class="default-container")
    header(class="material-header")
      a(href="/s" class="header-left")
        svg(width="24" height="24" fill="#273D52" viewBox="0 0 24 24" aria-label="Home")
          path(d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z")
      div(class="header-expand")
        h1 All Stations

    div(class="default-content")
      each group, index in data.data
        - var notbus = (index !== '3')
        if notbus
          h2= data.group_names[index]
          ul
            each station in group
              li
                a( href=('/s/' + region + '/' + station.stop_id))= (station.stop_id + ' - ' + station.stop_name)

      h2 Bus
      ul
        each station in data.data['3']
          li
            a( href=('/s/' + region + '/' + station.stop_id))= (station.stop_id + ' - ' + station.stop_name)
      